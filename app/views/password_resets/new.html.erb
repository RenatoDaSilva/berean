<% provide(:title, "Esqueceu a senha?") %>
<h1>Esqueceu a senha?</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email, "Informe o seu e-mail para que eu possa lhe ajudar" %>

      <% if current_user %>
          <%= f.text_field :email, required: true, class: 'form-control', value:current_user.email  %>
      <% else %>
          <%= f.text_field :email, required: true, class: 'form-control'%>
      <% end %>

      <%= f.submit "Enviar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>