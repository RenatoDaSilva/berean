<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? %>
      | <%= link_to "Editar", user, method: :put %>
  <% end %>
  <% if current_user.admin? %>
      | <%= link_to "Excluir", user, method: :delete,
                    data: { confirm: "Confirma?" } %>
  <% end %>
</li>